<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="@dimen/status_spin_height">
    <ImageView
            android:id="@+id/presenceStatusIconView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@+id/presenceStatusNameView"
            android:layout_alignBottom="@+id/presenceStatusNameView"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/jabber_status_ffc"/>
    <TextView
            style="@style/MediumFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/presenceStatusIconView"
            android:id="@+id/presenceStatusNameView"
            android:layout_centerVertical="true"
            android:text="Offline"/>
</RelativeLayout>