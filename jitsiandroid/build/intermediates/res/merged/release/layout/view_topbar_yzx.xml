<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_conver"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="@drawable/title_view_bg"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@drawable/message_view_press_bg"
        android:gravity="center"
        android:text="@string/tv_meg"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_tele"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/tele_view_bg"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="@string/tv_tel" />
</LinearLayout>
