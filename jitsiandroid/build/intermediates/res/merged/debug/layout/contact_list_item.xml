<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_tel_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:background="#ffffff" >

    <ImageView
        android:id="@+id/iv_tel_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dip"
        android:layout_marginRight="10dip"
        android:layout_centerVertical="true"
        android:background="@drawable/person"
        android:clickable="false"
        android:focusable="false" />

    <TextView
        android:id="@+id/tv_tel_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:textSize="12sp"
        android:textColor="@color/item_content_color"
        android:text="11-30 17:38" />
    <TextView
        android:id="@+id/tv_call_times"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:textSize="12sp"
        android:layout_below="@id/tv_tel_time"
        android:layout_marginTop="5dp"
        android:textColor="@color/item_content_color"
        android:text="11-30 17:38" />
    <TextView
        android:id="@+id/tv_tel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="11111"
        android:layout_toRightOf="@id/iv_tel_head"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_tel_head"
        android:layout_below="@id/tv_tel"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_tel_dial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/out_call"
            android:layout_marginRight="2dp"/>

        <TextView
            android:id="@+id/tv_tel_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:gravity="center"
            android:textColor="@color/tv_msg_mode"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>