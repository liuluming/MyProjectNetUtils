<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              style="@style/ScreenPadding"
              android:gravity="center_horizontal">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/service_gui_security_CIPHER"
            android:id="@+id/security_cipher" style="@style/MediumFont"/>
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/service_gui_security_SECURE_AUDIO"
                android:id="@+id/secure_audio_text"
                style="@style/MediumFont"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/secure_audio_icon"
                android:src="@drawable/secure_audio_off"
                android:layout_toRightOf="@+id/secure_audio_text"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="10dp"/>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/service_gui_security_SECURE_VIDEO"
                android:id="@+id/secure_video_text"
                style="@style/MediumFont"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/secure_video_icon"
                android:src="@drawable/secure_video_off"
                android:layout_toRightOf="@+id/secure_video_text"
                android:layout_marginLeft="10dp"/>
    </RelativeLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/service_gui_security_COMPARE_WITH_PARTNER_SHORT"
            android:id="@+id/security_compare"
            style="@style/MediumFont"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\? \? \? \? \?"
            android:id="@+id/security_auth_str"
            style="@style/MediumFont"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:id="@+id/security_confirm"
            android:layout_alignLeft="@+id/security_cipher"
            android:layout_below="@+id/secure_video_text"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"/>
</LinearLayout>